html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        title 4head - Recent Post's 
        meta(name="description" content="4head anonymous post site")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        style 
            include css/main.css 
        link( rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    body
        div(class="container-fluid")
            div(class="header")
                a(href="/" class="page-title") 4head

                nav.navbar.navbar-expand-lg.navbar-light.bg-light
                    button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation")
                        span(class="navbar-toggler-icon")
                    div.collapse.navbar-collapse#navbarTogglerDemo02
                        ul.navbar-nav.mr-auto.mt-2.mt-lg-0 
                            li.nav-item
                                a(class="nav-link" href="/create_post") Create Post
                            li.nav-item
                                a(class="nav-link" href="/") Recent Posts
                            li.nav-item
                                a(class="nav-link disabled" href="/popular_posts") Popular Posts
                
                div.container-xxl.container-main
                    for post in postlist
                        div.container-xl.post-window
                            h1.board-title Post #[span=post.post_id]
                            div.post-content
                                h2.title-s=post.title
                                p!=post.content
                            div.post-actions
                                a(href="/upvote") Upvote 
                                a(href="/post#1224343/reply") Reply
                                a(href="/post#1234344/view") View
                                p Upvote's: #[span=post.upvotes] Reply's: #[span=post.replys_count]
                            p.uploaded-date Uploaded #[span.uploaded-span= post.time_posted]
        script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
