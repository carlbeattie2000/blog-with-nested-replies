extends admin_layout.pug
block content
    .container-stats
        for stat in main_stats
            .stat-item
                h1.box-topic Post's
                p.number=stat.posts
            .stat-item
                h1 Total Replies
                p.number=stat.replies
    for post in posts
        .container-reports
            h1=post.title
            p.flag Flagged Reason: #[span=post.reason]
            details
                summary Post Content
                p!=post.content
            a.success(href="/admin/approve-post/" +post.post_id) approve post
            a.danger(href='/admin/delete-post/' +post.post_id) remove post
            a.warning(href='/admin/close-replies/' +post.post_id) close replies
